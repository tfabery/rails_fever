<div class="comments">
  <p>
    <span class="author"><%= comment.user.username %></span>
    <span class="created_at"><%= time_ago_in_words(comment.created_at) %> ago</span>
  </p>
  <p>
    <%= comment.content %>
  </p>

  <% if @current_user == comment.user %>
  <% end %>
  <% if @current_user %>
    <p><%=link_to "reply", new_comment_comment_path(comment), id: ('comment' + comment.id.to_s + '_link'), remote: true %></p>
  <% end %>

  <%= render partial: 'comments/comment', collection: comment.comments.order(created_at: :asc) %>
</div>
